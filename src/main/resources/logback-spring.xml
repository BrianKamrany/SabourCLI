<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="FORMAT" value="%date{yyyy-MM-dd HH:mm:ss} | %level | %thread | %logger - %msg%n"/>
    
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${FORMAT}</pattern>
        </encoder>
    </appender>
    
	<appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/Sabour.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/Sabour (%d{MM-dd-yyyy}).log</fileNamePattern>
			<maxHistory>30</maxHistory>
			<totalSizeCap>30MB</totalSizeCap>
		</rollingPolicy>
		<encoder>
            <pattern>${FORMAT}</pattern>
		</encoder>
	</appender>
	
	<logger name="org.springframework" level="INFO"/>
	<logger name="demo.Application" level="WARN"/>

	<root level="TRACE">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ROLLING_FILE" />
	</root>
</configuration>